{
  "variables": {
    "iso": "CentOS-7-x86_64-Minimal-1804.iso",
    "checksum": "714acc0aefb32b7d51b515e25546835e55a90da9fb00417fbee2d03a62801efd"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "iso_url": "{{ user `iso` }}",
      "iso_checksum": "{{ user `checksum` }}",
      "iso_checksum_type": "sha256",
      "vm_name": "developer",
      "guest_os_type": "RedHat_64",
      "ssh_username": "root",
      "ssh_password": "password",
      "ssh_port": 22,
      "ssh_wait_timeout": "600s",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "4096"],
        ["modifyvm", "{{.Name}}", "--cpus", "2"],
        ["modifyvm", "{{.Name}}", "--audio", "none"],
               ["hostonlyif", "create"],
               ["modifyvm", "{{.Name}}", "--nic2", "hostonly"],
        ["modifyvm", "{{.Name}}", "--cableconnected2", "on"],
               ["modifyvm", "{{.Name}}", "--hostonlyadapter2", "VirtualBox Host-Only Ethernet Adapter"]
      ],
      "disk_size": "10240",
      "http_directory": "http",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
          "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "shutdown_command": "/sbin/halt -p"
    }
  ],
   "provisioners": [
     {
      "type": "file",
      "source": "./installer.sh",
          "destination": "/tmp/installer.sh"
     },
        {
          "type": "shell",
          "inline": "chmod +x /tmp/installer.sh"
        },
        {
          "type": "shell",
          "inline": "sed -i 's/\r$//' /tmp/installer.sh"
        },
        {
          "type": "shell",
          "inline": "bash /tmp/installer.sh"
        },
        {
      "type": "file",
      "source": "./authorized_keys",
          "destination": "/home/vagrant/.ssh/authorized_keys"
        },
        {
          "type": "shell",
          "inline": "chmod 0600 /home/vagrant/.ssh/authorized_keys"
        },
        {
          "type": "shell",
          "inline": "chown -R vagrant:vagrant /home/vagrant/.ssh "
        },
        {
          "type": "shell",
          "inline": "rm -rf /root/.bash_profile"
        },
        {
          "type": "file",
          "source": "./.bash_profile",
          "destination": "/root/.bash_profile"
        },
        {
          "type": "shell",
          "inline": "chmod 644 /root/.bash_profile"
        },
        {
          "type": "shell",
          "inline": "source /root/.bash_profile"
        },
        { 
          "type": "file",
          "source": "./kube-flannel.yaml",
          "destination": "/tmp/kube-flannel.yaml"
        },
        {
          "type": "shell",
          "inline": "chmod 755 /tmp/kube-flannel.yaml"
        },
        {
          "type": "file",
          "source": "./kubernetes-dashboard.yaml",
          "destination": "/tmp/kubernetes-dashboard.yaml"
        },
        {
          "type": "shell",
          "inline": "chmod 755 /tmp/kubernetes-dashboard.yaml"
        },
        {
          "type": "file",
          "source": "./kubernetes-install.sh",
          "destination": "/tmp/kubernetes-install.sh"
        },
        {
          "type": "shell",
          "inline": "chmod 755 /tmp/kubernetes-install.sh"
        },
        {
          "type": "shell",
          "inline": "bash /tmp/kubernetes-install.sh"
        }           
   ], 
   "post-processors": ["vagrant"]      
}
